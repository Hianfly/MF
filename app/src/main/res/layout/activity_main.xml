<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hiandev.mf.MainActivity">

    <TextView
        android:id="@+id/_txvw_00"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="Retry"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_square_text"
        />

    <TextView
        android:id="@+id/_txvw_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_txvw_00"
        android:text="Apps can't send data to server"
        android:textColor="#FFFF6666"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
